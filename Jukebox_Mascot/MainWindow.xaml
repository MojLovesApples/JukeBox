<Window x:Class="Jukebox_Mascot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jukebox_Mascot"
        mc:Ignorable="d"
        Title="MainWindow" Height="395" Width="415"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize" BorderThickness="0" BorderBrush="Black">
    <Grid Margin="0,0,10,10" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" >
        <Image Name="MusicNote"
            Width="195" Height="202"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Canvas.Top="20"  Margin="110,165,0,0" RenderTransformOrigin="0.5,0.5">
        </Image>
        <Image Name="JukeBoxSprite"
          Width="139" Height="237"
          HorizontalAlignment="Left"
          VerticalAlignment="Top"
          Canvas.Top="20"  Margin="40,120,0,0"/>
        <Image Name="JukeBoxSpriteFunny"
           Width="139" Height="167"  MouseLeftButtonDown="JukeBoxSprite_Click"
           HorizontalAlignment="Left"
           VerticalAlignment="Top"
           Canvas.Top="20"  Margin="45,190,0,0"/>
        <Image Name="SpriteImage"
           Width="160" Height="162"
           HorizontalAlignment="Left"
           VerticalAlignment="Top"
           Canvas.Top="20"  Margin="130,167,0,0" RenderTransformOrigin="0.5,0.5">
        </Image>


        <Label x:Name="SpriteLabel"
           Content=""
           Background="Transparent"
           Foreground="Transparent"
           FontWeight="Bold"
           FontSize="14"
           VerticalContentAlignment="Center" RenderTransformOrigin="-0.145,-0.349" HorizontalAlignment="Left" VerticalAlignment="Top" Width="135" Canvas.Left="45" Canvas.Top="6" Margin="115,1,0,0"/>
        <Border x:Name="SpeechBubbleBorder"
                Background="Black"
                BorderBrush="White"
                BorderThickness="1.5"
                Width="120" Height="74"
                Opacity="0"
                Padding="5"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Visibility="Visible"
                RenderTransformOrigin="0,0" Margin="75,6,0,0"
    >
            <TextBlock x:Name="SpriteSpeech"
                   Text=""
                   Foreground="White"
                   FontWeight="Bold"
                   FontSize="15"
                   FontFamily="Agency FB"
                   TextWrapping="Wrap"/>
        </Border>
        <Border x:Name="ScrollingBorder" Background="White"
            CornerRadius="10"        
            BorderBrush="LightGreen"
            BorderThickness="1.5"
            Width="0" Height="40"
            Padding="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Margin="50,0,0,220">
            <Canvas ClipToBounds="True">
                <TextBlock x:Name="ScrollingText"
                       Text=""
                       Foreground="RosyBrown"
                       FontWeight="Bold"
                       FontSize="16"
                       FontFamily="Agency FB"
                       Canvas.Left="0"
                       Canvas.Top="5"/>
            </Canvas>
        </Border>

    </Grid>
</Window>

